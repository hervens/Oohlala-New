<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/red1"
                android:endColor="@color/red1"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/red2" />
            <corners
                android:radius="3dp" />  
        </shape>
    </item>

    <item>      
        <shape>
            <gradient
                android:startColor="@color/red1"
                android:endColor="@color/red1"
                android:angle="270" />
