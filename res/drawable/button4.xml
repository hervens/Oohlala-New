<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/red2"
                android:endColor="@color/red2"
                android:angle="270" />
            <corners
                android:radius="0dp" /> 
           	<padding android:left="20dp" android:top="0dp"
                android:right="20dp" android:bottom="0dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/red1"
                android:endColor="@color/red2"
                android:angle="270" />
            <corners
                android:radius="0dp" />  
            <padding android:left="20dp" android:top="0dp"
                android:right="20dp" android:bottom="0dp" />
        </shape>
    </item>
</selector>