<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/realtransparent"
                android:endColor="@color/realtransparent"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/blue1" />
            <corners
                android:radius="2dp" />  
            <padding android:left="8dp" android:top="3dp"
                android:right="8dp" android:bottom="3dp" />
        </shape>
    </item>

    <item>      
        <shape>
            <gradient
                android:startColor="@color/realtransparent"
                android:endColor="@color/realtransparent"
                android:angle="270" />
            <corners
                android:radius="2dp" />  
            <padding android:left="8dp" android:top="3dp"
                android:right="8dp" android:bottom="3dp" />
        </shape>
    </item>
</selector>