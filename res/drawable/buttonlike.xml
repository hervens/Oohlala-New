<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/green2"
                android:endColor="@color/green2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/green3" />
            <corners
                android:radius="2dp" />  
            <padding android:left="10dp" android:top="3dp"
                android:right="10dp" android:bottom="3dp" />
        </shape>
    </item>

    <item>      
        <shape>
            <gradient
                android:startColor="@color/green1"
                android:endColor="@color/green2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/green3" />
            <corners
                android:radius="2dp" />  
            <padding android:left="10dp" android:top="3dp"
                android:right="10dp" android:bottom="3dp" />
        </shape>
    </item>
</selector>