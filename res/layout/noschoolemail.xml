<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_redeem_item" >
    
    <LinearLayout android:id="@+id/title" android:clickable="true"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:background="@drawable/bg_launch" android:gravity="bottom|center_horizontal"
		android:layout_above="@+id/content">
		<View 
		    android:layout_width="200dp" 
		    android:layout_height="39dp"
		    android:layout_marginBottom="10dp"
			android:background="@drawable/logo" />
	</LinearLayout>
		
        <LinearLayout
            android:id="@+id/content"
    		android:layout_width="fill_parent"
   			android:layout_height="200dp"
    		android:orientation="vertical"
    		android:background="@drawable/bg_launch"
    		android:layout_alignParentBottom="true" >
    		
            <TextView android:id="@+id/tvTitle" android:layout_width="fill_parent"
			android:layout_height="wrap_content" android:text="@string/Do_not_have_a_school_email"
			android:gravity="center" android:textSize="15dp" android:textColor="@color/white1"
			android:layout_marginTop="20dp" android:textStyle="bold"
			android:shadowRadius="1"
  			android:shadowDx="0"
  			android:shadowDy="-2"
  			android:shadowColor="@color/shadow_color" />
            
            <EditText android:id="@+id/etNoSchoolEmailName" android:layout_width="fill_parent"
			android:layout_marginTop="5dp" 
			android:inputType="textEmailAddress" android:layout_marginLeft="30dp"
			android:layout_marginRight="30dp" android:layout_height="40dp"
			android:hint="@string/Type_in_your_school_name"
			android:background="@android:drawable/editbox_background" android:layout_below="@+id/etNoSchoolEmailName" />
            
            <EditText android:id="@+id/etNoSchoolEmail" android:layout_width="fill_parent"
			android:layout_marginBottom="5dp"
			android:inputType="textEmailAddress" android:layout_marginLeft="30dp"
			android:layout_marginRight="30dp" android:layout_height="40dp"
			android:background="@android:drawable/editbox_background" android:layout_below="@+id/tvTitle" />
			
            <Button android:id="@+id/bNoSchoolEmail" android:layout_width="fill_parent"
				android:layout_marginLeft="60dp" android:layout_marginRight="60dp"
				android:layout_height="40dp" android:layout_below="@+id/etNoSchoolEmail"
				android:textSize="16dp"
				android:padding="0dp" android:textColor="@color/white1"
				android:layout_centerHorizontal="true" android:textStyle="bold"
				android:background="@drawable/btn_redeem_item_state" android:text="@string/Continue"
				android:shadowRadius="1"
	  			android:shadowDx="0"
	  			android:shadowDy="-2"
	  			android:shadowColor="@color/shadow_color" />
    		
