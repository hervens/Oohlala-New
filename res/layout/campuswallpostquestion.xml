<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

   <RelativeLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:orientation="horizontal"
		        android:background="@drawable/header_slice"
		        android:id="@+id/rlHeader"
		        android:paddingTop="5dp"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:paddingBottom="5dp" >
		       
				<TextView  
				    android:id="@+id/header"
					android:layout_width="200dp" 
					android:layout_height="35dp"
					android:text=""
					android:textColor="@color/white1"
					android:textSize="16dp"
					android:maxLines="1"
					android:layout_centerInParent="true"
					android:gravity="center" />
				
				<Button
			        android:layout_width="54dp"
			        android:layout_height="35dp"
			        android:background="@drawable/button_back"
			        android:id="@+id/back"
			        android:layout_marginTop="2dp"
			        android:layout_alignParentLeft="true" />

			</RelativeLayout>
    
    <TextView
	        android:id="@+id/tvSchoolName"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text=""
	        android:textColor="@color/white1"
	        android:background="@drawable/textview"
	        android:paddingLeft="5dp"
	        android:paddingTop="3dp"
	        android:paddingBottom="3dp"
	        android:layout_alignParentTop="true" />
    
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/rounded_corner_row_bg_state"
	    android:paddingTop="10dp"
	    android:paddingLeft="10dp"
	    android:paddingRight="10dp"
	    android:paddingBottom="0dp"
	    android:orientation="vertical" >
				
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal" >
    
    <ImageView
        android:id="@+id/ivThumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp" />

    <EditText
        android:id="@+id/etPostThread"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/ivThumb"
        android:layout_weight="1"
        android:inputType="textMultiLine"
        android:singleLine="false" 
        android:lines="5"
        android:gravity="top" />
    
    </LinearLayout>
    
   			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal"
			    android:gravity="right" >
				
		        <LinearLayout
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:id="@+id/anonymous"
		           	android:layout_weight="1" >
		        <CheckBox
		            android:id="@+id/rbAnonymous"
		            android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:text="@string/Anonymous"
		            android:textSize="12dp"
		            android:textColor="@color/dimgrey3"
		            android:layout_marginLeft="60dp" />
				</LinearLayout>
				
			    <Button
			        android:id="@+id/bPostThread"
			        android:layout_width="50dp"
			        android:layout_height="30dp"
			        android:text="@string/Share"
			        android:textSize="12dp"
			        android:textColor="@color/dimgrey3"
			        android:background="@drawable/campuswall_button_background"
			        android:layout_marginLeft="5dp"
			        android:layout_marginTop="10dp" />

			</LinearLayout>
	</LinearLayout>
    
     <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
			    android:layout_width="fill_parent"
			    android:layout_height="fill_parent"
			    android:background="@color/blue3" >
			    
         </LinearLayout>
    
</LinearLayout>