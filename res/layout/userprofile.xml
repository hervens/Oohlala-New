<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/white1" >
    
    <RelativeLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:orientation="horizontal"
		        android:background="@drawable/header_slice"
		        android:id="@+id/rlHeader"
		        android:paddingTop="5dp"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:paddingBottom="5dp" >
		       
				<TextView  
				    android:id="@+id/header"
					android:layout_width="200dp" 
					android:layout_height="35dp"
					android:text=""
					android:textColor="@color/white1"
					android:textSize="16dp"
					android:maxLines="1"
					android:layout_centerInParent="true"
					android:gravity="center"
					android:shadowRadius="1"
  					android:shadowDx="0"
  					android:shadowDy="-2"
  					android:shadowColor="@color/shadow_color" />
				
				<com.gotoohlala.TopMenuNavbar  
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:id="@+id/bTopMenuNavBar"
			        android:layout_marginTop="2dp"
			        android:layout_alignParentLeft="true" />
				
				<Button
			        android:layout_width="54dp"
			        android:layout_height="35dp"
			        android:background="@drawable/settings_button"
			        android:id="@+id/bSettings"
			        android:layout_marginTop="2dp"
			        android:layout_alignParentRight="true" />
	
			</RelativeLayout>
	
    <ScrollView
	    android:id="@+id/scrollView1"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:layout_below="@+id/rlHeader"
	    android:layout_above="@+id/llBottomButtons"
	    android:background="@color/white1"
	    android:fadingEdge="none"
	    android:scrollbarThumbVertical="@drawable/scrollbar_vertical_thumb" >

	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:orientation="vertical"
	        android:padding="10dp"
	   	 	android:id="@+id/content1"
	    	android:background="@color/white1" >
	        
	<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:background="@drawable/rounded_corner_row_bg_state"
	    android:padding="10dp"
	    android:layout_marginBottom="10dp" >

    <ImageView
        android:id="@+id/ivThumb"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:adjustViewBounds="true" 
        android:scaleType="centerCrop"
        android:padding="5dp"
        android:background="@drawable/profile_pic_bg2" />
    
    <TextView
        android:id="@+id/tvProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="James"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:maxLines="1"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivThumb" />
    
    			<RelativeLayout 
    			    android:id="@+id/rlEducation"
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:padding="2dp"
				    android:layout_toRightOf="@+id/ivThumb"
				    android:layout_below="@+id/tvProfileName"
				    android:layout_marginTop="3dp" >
				    <ImageView
				        android:layout_width="16dp"
				        android:layout_height="16dp"
				       	android:background="@drawable/icon_university"
				       	android:layout_marginLeft="10dp" />
				    <TextView
				        android:id="@+id/tvEducation"
				        android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:text=""
				    	android:textColor="@color/dimgrey3"
				    	android:textSize="12dp"
				    	android:layout_gravity="center"
				    	android:layout_marginLeft="30dp" />
				</RelativeLayout>
				
    			 <RelativeLayout 
				    android:layout_width="fill_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:padding="2dp"
				    android:layout_toRightOf="@+id/ivThumb"
				    android:layout_below="@+id/rlEducation"
				    android:layout_marginTop="3dp" >
				    <ImageView
				        android:layout_width="15dp"
				        android:layout_height="13dp"
				       	android:background="@drawable/icon_heart"
				       	android:layout_marginLeft="10dp" />
				    <TextView
				        android:id="@+id/tvRelationship"
				        android:layout_width="wrap_content"
				    	android:layout_height="wrap_content"
				    	android:text=""
				    	android:textColor="@color/dimgrey3"
				    	android:textSize="12dp"
				    	android:layout_gravity="center"
				    	android:layout_marginLeft="30dp" />
				
				</RelativeLayout>
    
     <EditText
        android:id="@+id/etStatus"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:textColor="@color/dimgrey3"
        android:textSize="15dp"
        android:text=""
        android:editable="false"
        android:paddingTop="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:layout_below="@+id/ivThumb"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_profile_status2"
        android:gravity="center" />

	</RelativeLayout>
	
	 <RelativeLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@drawable/rounded_corner_row_bg_state"
	        android:padding="10dp"
	        android:gravity="center" >
     		
	     	<LinearLayout 
	     	    android:id="@+id/llbox1"
	     	    android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal"
	        	android:layout_marginBottom="10dp">
				    
	    	 <RelativeLayout
	    		android:id="@+id/rlPbox1"
			  	android:layout_width="200dp"
				android:layout_height="80dp"
			 	android:orientation="vertical"
				android:background="@drawable/bg_profile_box2"
				android:layout_weight="1"
				android:layout_marginRight="10dp" >
				
	    	    <TextView
	    	        android:id="@+id/tvPbox1"
	    	        android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:text="@string/friends"
					android:textColor="@color/white1"
					android:gravity="center"/>
	    	    
	    	    <LinearLayout 
		     	    android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="horizontal"
		        	android:layout_below="@+id/tvPbox1"
		        	android:padding="2dp">
	        	
		   		    <ImageView 
		   		       	android:id="@+id/ivFriend1"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp" />
		   		    
		   		    <ImageView 
		   		       	android:id="@+id/ivFriend2"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:layout_marginRight="2dp" />
		   		    
		   		    <ImageView 
		   		       	android:id="@+id/ivFriend3"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:layout_marginRight="2dp" />
		   		    
		   		</LinearLayout>
				
			</RelativeLayout>
				    
	   		<RelativeLayout
	    		android:id="@+id/rlPbox2"
			  	android:layout_width="200dp"
				android:layout_height="80dp"
			 	android:orientation="vertical"
				android:background="@drawable/bg_profile_box2"
				android:layout_weight="1"
				android:layout_toRightOf="@+id/rlPbox1" >
	    	    
	   		    <TextView
	    	        android:id="@+id/tvPbox2"
	    	        android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:text="@string/My_Classes"
					android:textColor="@color/white1"
					android:gravity="center"/>
	   		    
	   		    <RelativeLayout 
		     	    android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="horizontal"
		        	android:layout_below="@+id/tvPbox2"
		        	android:padding="2dp">
	        	
		   		    <ImageView 
		   		       	android:id="@+id/ivClass1"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp" />
		   		    
		   		    <ImageView 
		   		       	android:id="@+id/ivClass2"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:layout_marginRight="2dp"
						android:layout_toRightOf="@+id/ivClass1" />
		   		    
		   		    <ImageView 
		   		       	android:id="@+id/ivClass3"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:layout_marginRight="2dp"
						android:layout_toRightOf="@+id/ivClass2" />
		   		    
		   		    <TextView 
		   		        android:id="@+id/tvCurrentClass"
				        android:layout_width="wrap_content"
				        android:layout_height="wrap_content"
				        android:text="@string/FREE"
				        android:textColor="@color/dimgrey3"
				        android:textSize="20dp"
				        android:gravity="center"
				        android:layout_centerInParent="true"
				        android:visibility="gone" />
		   		    
		   		</RelativeLayout>
	   		    
			</RelativeLayout>
			</LinearLayout>
			
	     	<LinearLayout 
	     	    android:id="@+id/llbox2"
	     	    android:layout_width="fill_parent"
	        	android:layout_height="wrap_content"
	        	android:orientation="horizontal"
	        	android:layout_below="@+id/llbox1"
	        	android:layout_marginBottom="10dp">
	   		
	   		<RelativeLayout
	    		android:id="@+id/rlPbox3"
			  	android:layout_width="200dp"
				android:layout_height="80dp"
			 	android:orientation="vertical"
				android:background="@drawable/bg_profile_box2"
				android:layout_weight="1"
				android:layout_marginRight="10dp" >
	   		    
	   		    <TextView
	    	        android:id="@+id/tvPbox3"
	    	        android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:text="@string/Badges_Gifts"
					android:textColor="@color/white1"
					android:gravity="center"/>
	   		    
	   		     <LinearLayout 
		     	    android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="horizontal"
		        	android:layout_below="@+id/tvPbox3"
		        	android:padding="2dp">
	        	
		   		    <ImageView 
		   		       	android:id="@+id/ivBadge1"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:background="@drawable/profile_badge_placeholder"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp" />
		   		    
		   		    <ImageView 
		   		       	android:id="@+id/ivBadge2"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:background="@drawable/profile_badge_placeholder"
						android:layout_marginRight="2dp" />
		   		    
		   		    <ImageView 
		   		       	android:id="@+id/ivBadge3"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:background="@drawable/profile_badge_placeholder"
						android:layout_marginRight="2dp" />
		   		    
		   		</LinearLayout>
	   		    
			</RelativeLayout>	    
			
	    	<RelativeLayout
	    		android:id="@+id/rlPbox4"
			  	android:layout_width="200dp"
				android:layout_height="80dp"
			 	android:orientation="vertical"
				android:background="@drawable/bg_profile_box2"
				android:layout_weight="1"
				android:layout_toRightOf="@+id/rlPbox3" >
	   		    
	    	    <TextView
	    	        android:id="@+id/tvPbox4"
	    	        android:layout_width="fill_parent"
					android:layout_height="25dp"
					android:text="@string/My_Clubs"
					android:textColor="@color/white1"
					android:gravity="center"/>
	    	    
	    	      <LinearLayout 
		     	    android:layout_width="fill_parent"
		        	android:layout_height="wrap_content"
		        	android:orientation="horizontal"
		        	android:layout_below="@+id/tvPbox4"
		        	android:padding="2dp">
	        	
		   		    <ImageView 
		   		       	android:id="@+id/ivClub1"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:layout_marginLeft="2dp"
						android:layout_marginRight="2dp" />
		   		    
		   		    <ImageView 
		   		       	android:id="@+id/ivClub2"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:layout_marginRight="2dp" />
		   		    
		   		    <ImageView 
		   		       	android:id="@+id/ivClub3"
		    	        android:layout_width="47dp"
						android:layout_height="47dp"
						android:layout_weight="1"
						android:layout_marginRight="2dp" />
		   		    
		   		</LinearLayout>
				 
	    	</RelativeLayout>	
			</LinearLayout>
			
	     	<Button
	         	android:id="@+id/bInvite"
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:text="@string/Invite"
		        android:background="@drawable/campuswall_button_background"
		        android:textColor="@color/dimgrey3"
		        android:textSize="16dp"
		        android:gravity="center"
		        android:layout_below="@+id/llbox2" />

	  </RelativeLayout>
	   
	</LinearLayout>
	</ScrollView>
     
</RelativeLayout>