<?xml version="1.0" encoding="utf-8"?>		
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    
    		<RelativeLayout
		        xmlns:android="http://schemas.android.com/apk/res/android"
		        android:layout_width="fill_parent"
		        android:layout_height="50dp"
		        android:orientation="horizontal"
		        android:background="@drawable/header_slice"
		        android:id="@+id/rlHeader"
		        android:paddingTop="5dp"
		        android:paddingLeft="5dp"
		        android:paddingRight="5dp"
		        android:paddingBottom="5dp" >
		       
				<TextView  
				    android:id="@+id/header"
					android:layout_width="200dp" 
					android:layout_height="35dp"
					android:text=""
					android:textColor="@color/white1"
					android:textSize="16dp"
					android:maxLines="1"
					android:layout_centerInParent="true"
					android:gravity="center"
					android:shadowRadius="1"
  					android:shadowDx="0"
  					android:shadowDy="-2"
  					android:shadowColor="@color/shadow_color" />
				
				<Button
			        android:layout_width="54dp"
			        android:layout_height="35dp"
			        android:background="@drawable/button_back"
			        android:id="@+id/back"
			        android:layout_marginTop="2dp"
			        android:layout_alignParentLeft="true" />
				
				<TextView
			        android:layout_width="54dp"
			        android:layout_height="38dp"
			        android:id="@+id/bSave"
			        android:text="@string/Save"
		 			android:textSize="13dp"
		 			android:textColor="@color/dimgrey3"
					android:gravity="center"
			        android:layout_marginTop="0dp"
			        android:layout_alignParentRight="true"
			        android:background="@drawable/compose_share_button_bg" />

			</RelativeLayout>
	
    <RelativeLayout 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:layout_below="@+id/rlHeader"
		android:padding="10dp" >
		
        <RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="60dp"
			android:id="@+id/rlStartTime" >
				
        <ImageView
	        android:id="@+id/ivStartTimeBg"
	        android:layout_width="fill_parent"
	        android:layout_height="60dp"
	        android:adjustViewBounds="true" 
	        android:scaleType="centerCrop"
	        android:background="@drawable/edit_row_top" />
        
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/Start_Time"
	        android:textSize="15dp"
	        android:textColor="@color/dimgrey3"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="25dp" />
         
         <TextView
	        android:id="@+id/tvStartTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="9:00 AM"
	        android:textSize="18dp"
	        android:textColor="@color/black1"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="25dp" />
        
        </RelativeLayout>
	
     	<RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="60dp"
			android:id="@+id/rlEndTime"
			android:layout_below="@+id/rlStartTime" >
				
        <ImageView
	        android:id="@+id/ivEndTimeBg"
	        android:layout_width="fill_parent"
	        android:layout_height="60dp"
	        android:adjustViewBounds="true" 
	        android:scaleType="centerCrop"
	        android:background="@drawable/edit_row_middle" />
        
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/End_Time"
	        android:textSize="15dp"
	        android:textColor="@color/dimgrey3"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="25dp" />
         
         <TextView
	        android:id="@+id/tvEndTime"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="10:00 AM"
	        android:textSize="18dp"
	        android:textColor="@color/black1"
	        android:layout_centerVertical="true"
	        android:layout_alignParentRight="true"
	        android:layout_marginRight="25dp" />
        
        </RelativeLayout>
   	
      	<RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="60dp"
			android:id="@+id/rlLocation"
			android:layout_below="@+id/rlEndTime" >
				
        <ImageView
	        android:id="@+id/ivLocationBg"
	        android:layout_width="fill_parent"
	        android:layout_height="60dp"
	        android:adjustViewBounds="true" 
	        android:scaleType="centerCrop"
	        android:background="@drawable/edit_row_middle" />
        
         <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/Location"
	        android:textSize="15dp"
	        android:textColor="@color/dimgrey3"
	        android:layout_centerVertical="true"
	        android:layout_marginLeft="25dp" />
         
         <Button
	        android:id="@+id/bLocation"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:hint="@string/add_location"
	        android:textSize="18dp"
	        android:textColor="@color/dimgrey3"
	        android:layout_centerVertical="true"
	        android:layout_marginRight="20dp"
	        android:layout_marginLeft="120dp"
	        android:layout_alignParentRight="true" />
        
        </RelativeLayout>
        
      	<RelativeLayout 
			android:layout_width="fill_parent"
			android:layout_height="60dp"
			android:id="@+id/rlButton"
			android:layout_below="@+id/rlLocation" >
				
        <ImageView
	        android:id="@+id/ivLocationBg"
	        android:layout_width="fill_parent"
	        android:layout_height="60dp"
	        android:adjustViewBounds="true" 
	        android:scaleType="centerCrop"
	        android:background="@drawable/edit_row_bottom" />

      	<Button
	         	android:id="@+id/bDelete"
		        android:layout_width="fill_parent"
		        android:layout_height="40dp"
		        android:text="@string/Delete"
		        android:background="@drawable/campuswall_button_background"
		        android:textColor="@color/dimgrey3"
		        android:textSize="16dp"
		        android:gravity="center"
		        android:layout_below="@+id/bSave"
		        android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp" />
      	
      	</RelativeLayout>
 	
	</RelativeLayout>

</RelativeLayout>