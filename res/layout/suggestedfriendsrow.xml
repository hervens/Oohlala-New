<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:padding="10dp"
	    android:id="@+id/bg"
	    android:background="@drawable/listview_row_bg_state" >  
    
    <ImageView
        android:id="@+id/ivThumb"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true" 
        android:scaleType="centerCrop" />
    
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:adjustViewBounds="true" 
        android:scaleType="centerCrop"
        android:src="@drawable/avatarframe" />
    
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16dp"
        android:layout_toRightOf="@+id/ivThumb" >
    </TextView>
    
    <Button
		android:id="@+id/bRequest"
		android:layout_width="150dp"
		android:layout_height="30dp"
		android:text="Add James"
		android:background="@drawable/campuswall_button_background"
		android:textColor="@color/dimgrey3"
		android:textSize="15dp"
		android:paddingLeft="15dp"
		android:layout_toRightOf="@+id/ivThumb"
        android:layout_below="@+id/name" />
    
    <ImageView
        android:id="@+id/ivCheck1"
        android:layout_width="28dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true" 
        android:scaleType="centerCrop"
        android:background="@drawable/add_friend_icon"
        android:layout_toRightOf="@+id/ivThumb"
        android:layout_below="@+id/name" />
    
    <ImageView
        android:id="@+id/ivCheck2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:adjustViewBounds="true" 
        android:scaleType="centerCrop"
        android:background="@drawable/icon_verified"
        android:layout_toRightOf="@+id/ivThumb"
        android:layout_below="@+id/name"
        android:visibility="gone" />
    
   <ImageView
		android:layout_width="10dp"
		android:layout_height="14dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		android:layout_marginRight="10dp"
		android:adjustViewBounds="true" 
		android:scaleType="centerCrop"
		android:src="@drawable/list_pointer" />
   
</RelativeLayout>