<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:text=""
        android:textSize="15dp"
        android:textColor="@color/white1"
        android:background="@drawable/tvdate"
        android:layout_gravity="center"
        android:layout_marginTop="5dp" >
    </TextView>
    
<RelativeLayout 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:layout_marginTop="5dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/ivImageOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" 
        android:scaleType="centerCrop"
        android:padding="5dp"
        android:background="@drawable/profile_pic_bg2" >
    </ImageView>
    
    <TextView
        android:id="@+id/tvTimeImageOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/ivImageOther"
        android:layout_marginTop="12dp"
        android:textSize="10dp" >
    </TextView>
    
    <ImageView
        android:id="@+id/ivImageUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" 
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:background="@drawable/profile_pic_bg2" >
    </ImageView>
    
    <ImageView
        android:id="@+id/ivReadImageUser"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="true" 
        android:scaleType="centerCrop"
        android:layout_toLeftOf="@+id/ivImageUser" >
    </ImageView>
    
    <TextView
        android:id="@+id/tvTimeImageUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/black"
        android:layout_toLeftOf="@+id/ivReadImageUser"
        android:layout_marginTop="12dp"
        android:textSize="10dp" >
    </TextView>
	
    <TextView
        android:id="@+id/tvMessageOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="5dp"
        android:paddingRight="10dp"
        android:paddingBottom="5dp"
        android:text=""
        android:textColor="@color/black"
        android:textSize="15dp"
        android:autoLink="web"
        android:background="@drawable/bubble_incoming" />
   
    <TextView
        android:id="@+id/tvTimeMessageOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/black"
        android:layout_toRightOf="@+id/tvMessageOther"
        android:layout_marginTop="10dp"
        android:textSize="10dp" />
    
     <TextView
        android:id="@+id/tvMessageUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:paddingRight="14dp"
        android:paddingBottom="5dp"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:autoLink="web"
        android:background="@drawable/bubble_outgoing" >
    </TextView>
    
    <ImageView
        android:id="@+id/ivReadMessageUser"
        android:layout_width="20dp"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="5dp"
        android:adjustViewBounds="true" 
        android:scaleType="centerCrop"
        android:layout_toLeftOf="@+id/tvMessageUser" >
    </ImageView>
    
    <TextView
        android:id="@+id/tvTimeMessageUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/black"
        android:layout_toLeftOf="@+id/ivReadMessageUser"
        android:layout_marginTop="12dp"
        android:textSize="10dp" >
    </TextView>
    
</RelativeLayout>

</LinearLayout>